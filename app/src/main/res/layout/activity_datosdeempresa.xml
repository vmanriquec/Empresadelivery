<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Datosdeempresa">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logotipo de tu empresa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/foto1"
                    android:layout_width="343dp"
                    android:layout_height="156dp"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <Button
                    android:id="@+id/camara1"
                    android:layout_width="104dp"
                    android:layout_height="59dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_menu_camera"
                    android:gravity="bottom" />

            </LinearLayout>

            <EditText
                android:id="@+id/razonsociall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Razon soc. de tu empresa(Obligatorio)" />

            <EditText
                android:id="@+id/direccionempresal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Direccion  de tu empresa(Obligatorio)"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/telefonoempresal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Telefono de tu Empresa(Obligatorio))"
                android:inputType="number" />

            <EditText
                android:id="@+id/emailempresal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Correo de tu Empresa"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/paginawebempresl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Pagina web empresa"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/sloganempresal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Slogan de tu empresa"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/nombreadministradorl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre del Administrador"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/telefonoadministradorl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Telefono Administrador"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rubro   " />

                <Spinner
                    android:id="@+id/spinnerrubroempresal"
                    android:layout_width="302dp"
                    android:layout_height="39dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/montominimol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Monto minimo para delivery"
                android:inputType="textPersonName|numberDecimal" />

            <EditText
                android:id="@+id/demoraempresal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="tiempo promedio que se demora el delivery"
                android:inputType="number|textPersonName" />

            <EditText
                android:id="@+id/costodeliveryempresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Costo de tu delivery(Obligatorio)"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/guardarproducto2"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:background="@drawable/fondotarjeta"
                android:gravity="center_horizontal|center_vertical"
                android:text="Guardar"
                android:textColor="@color/colortres"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.392"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>