<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subirnombresdedescuentos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView154c"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/fondotarjeta"
                android:gravity="center_horizontal|center_vertical"
                android:text="Administracion de Descuentos"
                android:textColor="@color/colortres"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerdescuentosempresa"
                android:layout_width="match_parent"
                android:layout_height="543dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/nombredescuentol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Nombre de Descuento"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/preciodescuentol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Precio Descuento"
                        android:inputType="textPersonName" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/guardardescuentoempresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fondotarjeta"
                android:text="Guardar"
                android:textColor="@color/colortres" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>