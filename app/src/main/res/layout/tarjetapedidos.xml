<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        app:cardCornerRadius="12dp"
        android:paddingRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/fechitapedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/trans"
                    android:text="TextView"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/estadopeido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="@color/colortres"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/datos"
android:layout_below="@id/fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombrecliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Nombre de Cliente"
                    android:textColor="@color/coloruno" />

                <TextView
                    android:id="@+id/direccion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="esta es la dire del cliente"
                    android:textColor="@color/coloruno" />

                <TextView
                    android:id="@+id/referencias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="referencias de donde vive"
                    android:textColor="@color/coloruno" />

                <TextView
                    android:id="@+id/txtporentregar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/fbutton_color_nephritis" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/cuantopag"
                android:layout_width="match_parent"
                android:layout_below="@+id/datos"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtd"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="Paga  " />

                <TextView
                    android:id="@+id/cuantopaga"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="cuantopaga"
                    android:textColor="@color/coloruno" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="vuelto" />

                <TextView
                    android:id="@+id/vuelto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="vuelto"
                    android:textColor="@color/coloruno" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/totales"
                android:layout_below="@+id/cuantopag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colortres"
                    android:gravity="center_vertical"
                    android:text="Total a apagar" />

                <TextView
                    android:id="@+id/idpedido"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="S/."
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/totalapagar1"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="total a pagar"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/muestrapedido"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cestavacia"
                    android:gravity="center_vertical" />

                <Button
                    android:id="@+id/mapau22"
                    android:layout_width="45dp"
                    android:layout_height="37dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="8dp"

                    android:layout_weight="1"
                    android:background="@drawable/voygps"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp" />

            </LinearLayout>

            <RelativeLayout

                android:id="@+id/botones"
                android:layout_below="@+id/totales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"


                android:background="@color/quantum_amber300">
                    <Button
                    android:id="@+id/rechazarorden"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"

                     android:layout_marginLeft="5dp"

                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/trans"
                    android:text="Rechazar "
                    android:textColor="@color/coloruno" />


                <ToggleButton
                    android:id="@+id/toggleButton2"
                    android:layout_width="58dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="45dp"
                    android:layout_toRightOf="@+id/rechazarorden"
                    android:background="@drawable/toggle_selector"

                    android:text=""
                    android:textOff="Local"
                    android:textOn='"' />

                <Button
                    android:id="@+id/ordenentragadab"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toLeftOf="@+id/watsapp"
                    android:background="@color/trans"
                    android:text="Entregado"

                    android:textColor="@color/coloruno" />

                <Button
                    android:id="@+id/watsapp"
                    android:layout_width="34dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/wasap"
                    android:gravity="center|center_horizontal|center_vertical" />
            </RelativeLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>